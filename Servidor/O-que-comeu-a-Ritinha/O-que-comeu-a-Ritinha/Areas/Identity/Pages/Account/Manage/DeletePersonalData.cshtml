@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Apagar a tua Conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="bg-white" id="backcolor">

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p class="m-0">
        <strong>Apagar estes dados irá apagar permanentemente a tua conta, e isto não pode ser revertido.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Apagar dados e fechar a minha conta</button>
    </form>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
