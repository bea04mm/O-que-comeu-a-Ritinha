@page
@model IndexModel
@{
	ViewData["Title"] = "Perfil";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="bg-white" id="backcolor">
	<h3>@ViewData["Title"]</h3>
	<partial name="_StatusMessage" for="StatusMessage" />
	<form id="profile-form" method="post">
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="col-md-6">
				<div class="form-floating mb-3">
					<input asp-for="Username" class="form-control" disabled />
					<label asp-for="Username" class="form-label"></label>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Phone" class="form-control"/>
					<label asp-for="Input.Phone" class="form-label"></label>
					<span asp-validation-for="Input.Phone" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating mb-3">
					<input asp-for="Input.Name" class="form-control" />
					<label asp-for="Input.Name" class="form-label"></label>
					<span asp-validation-for="Input.Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Birthday" class="form-control" />
					<label asp-for="Input.Birthday" class="form-label"></label>
					<span asp-validation-for="Input.Birthday" class="text-danger"></span>
				</div>
			</div>
			<div>
				<button id="update-profile-button" type="submit" class="btn btn-lg btn-primary">Guardar</button>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
