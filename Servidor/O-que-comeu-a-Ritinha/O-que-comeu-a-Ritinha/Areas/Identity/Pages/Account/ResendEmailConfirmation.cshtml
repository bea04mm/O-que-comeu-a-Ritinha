@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmação do email";
}

<div id="backcolor">
    <h1 class="mb-3 text-white">@ViewData["Title"]</h1>
<div>
        <form method="post">
            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
				<button type="submit" class="btn btn-lg btn-primary">Reenviar</button>
			</div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
