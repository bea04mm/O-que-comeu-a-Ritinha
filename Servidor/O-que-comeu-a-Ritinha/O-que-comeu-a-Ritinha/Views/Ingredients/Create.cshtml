@model O_que_comeu_a_Ritinha.Models.Ingredients

@{
	ViewData["Title"] = "Criar Ingrediente";
}

<div class="mt-5 pt-5 mb-5 pb-5">
	<div id="backcolor" class="m-5 p-4">

		<h1 class="text-center text-black m-0">Criar Ingrediente</h1>

		<div class="justify-content-center">
			<div class="col">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group m-4">
						<label asp-for="Ingredient" class="control-label text-black">Ingrediente</label>
						<input asp-for="Ingredient" class="form-control" />
						<span asp-validation-for="Ingredient" class="text-danger"></span>
					</div>
					<div class="form-group m-0">
						<input type="submit" value="Criar" class="btn btn-light" />
					</div>
				</form>
			</div>
		</div>
	</div>
	<a asp-action="Index" class="btn btn-outline-info m-3">Voltar à lista!</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
