@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-white fa-solid fa-user h1 p-2 m-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-white p-2 m-0">
					<span class="fa-solid fa-door-open h1"></span>
				</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Regista-te</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
