@model O_que_comeu_a_Ritinha.Models.Tags

@{
	ViewData["Title"] = "Criar Tag";
}

<div class="mt-5 mb-5 pt-4 pb-4">
	<div id="backcolor" class="mt-5 mb-5 pt-5 pb-5">

		<h1 class="text-center text-black m-0">Criar Tag</h1>

		<div class="justify-content-center">
			<div class="col">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group m-4">
						<input asp-for="Tag" class="form-control fs-3 text-center mb-2" />
						<span asp-validation-for="Tag" class="text-danger"></span>
					</div>
					<div class="form-group m-0">
						<input type="submit" value="Criar" class="btn btn-light m-2" />
						<a asp-action="Index" class="btn btn-info m-2">Voltar à lista!</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
