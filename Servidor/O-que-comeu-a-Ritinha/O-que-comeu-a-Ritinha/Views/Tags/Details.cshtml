@model O_que_comeu_a_Ritinha.Models.Tags

@{
    ViewData["Title"] = "Detalhes Tag";
}
<div class="mt-5 mb-5 pt-4 pb-4">
    <div id="backcolor" class="mt-5 mb-5 pt-5 pb-5">

        <h1>Detalhes</h1>

        <h3 class="text-black bg-white m-3 p-2 rounded">@Html.DisplayFor(model => model.Tag)</h3>

        <div class="form-group m-0">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-light m-2">Editar</a>
            <a asp-action="Index" class="btn btn-info m-2">Voltar à lista!</a>
        </div>
    </div>
</div>